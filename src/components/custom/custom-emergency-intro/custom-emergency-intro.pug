.custom-emergency-intro(v-waypoint="{ active: true, callback: onScroll, options: options }", :class="{ 'custom-emergency-intro--active': active}")
  .custom-emergency-intro__background(:style="{ backgroundImage: 'url(' + props.background + ')' }")
  .custom-emergency-intro__container
    .custom-emergency-intro__column
      h1.custom-emergency-intro__title(v-html="props.title")
      .custom-emergency-intro__body-container
        .custom-emergency-intro__image(:style="{ backgroundImage: 'url(' + props.image + ')' }")
        .custom-emergency-intro__body(v-html='props.body')


          
